{
  "plugins": [
    "plugins/markdown",
    "jsdoc-plugin-typescript",
    "node_modules/better-docs/typescript"
  ],
  "typescript": {
    "moduleRoot": "src"
  },
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.ts(doc|x)?$",
    "excludePattern": "(node_modules/|docs|.+\\.test.ts(doc|x)?$)"
  },
  "opts": {
    "template": "node_modules/better-docs",
    "destination": "docs",
    "recurse": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}
